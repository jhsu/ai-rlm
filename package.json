{
  "name": "ai-rlm",
  "version": "1.3.0",
  "description": "Recursive Language Model (RLM) implementation using the Vercel AI SDK. Process long contexts through iterative code execution and sub-LLM queries.",
  "author": "Joe Hsu <jhsu.x1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhsu/ai-rlm.git"
  },
  "bugs": {
    "url": "https://github.com/jhsu/ai-rlm/issues"
  },
  "homepage": "https://github.com/jhsu/ai-rlm#readme",
  "keywords": [
    "ai",
    "rlm",
    "recursive",
    "language-model",
    "llm",
    "ai-sdk",
    "context",
    "large-context",
    "agent",
    "tool"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./rlm": {
      "types": "./dist/rlm.d.ts",
      "import": "./dist/rlm.js"
    },
    "./rlm-tool": {
      "types": "./dist/rlm-tool.d.ts",
      "import": "./dist/rlm-tool.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@jitl/quickjs-wasmfile-release-asyncify": "^0.32.0",
    "quickjs-emscripten": "^0.32.0"
  },
  "optionalDependencies": {},
  "peerDependencies": {
    "ai": "^6.0.0",
    "zod": "^3.23.0 || ^4.1.8"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^3.0.29",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "ai": "^6.0.86",
    "bash-tool": "^1.3.14",
    "chalk": "^5.3.0",
    "just-bash": "^2.10.0",
    "ora": "^8.0.0",
    "typescript": "^5.0.0",
    "zod": "^4.1.8"
  }
}
